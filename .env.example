# Yappy API Configuration
# Get these credentials from your Yappy merchant dashboard

# Merchant ID provided by Yappy
YAPPY_API_KEY=your_merchant_id_here

# Secret Token (base64 encoded secret.apikey format)
YAPPY_SECRET_KEY=your_secret_token_here

# URLs for your application
YAPPY_DOMAIN_URL=http://localhost:3000
YAPPY_SUCCESS_URL=http://localhost:3000/payment-success
YAPPY_FAIL_URL=http://localhost:3000/payment-fail
YAPPY_CHECKOUT_URL=http://localhost:3000

# Sandbox mode: 'yes' for testing, 'no' for production
YAPPY_SANDBOX=yes

# Server port
PORT=3000